<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tk.a111.Wyszykiwarka">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wpisz co bedziesz cwiczyla:"
            android:layout_marginTop="90dp"
            />

        <EditText
            android:id="@+id/schere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="Wpisz cwiczenie"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/ButtonWyszukaj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnCliclWYszukaj"
            android:text="Wyszukaj" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
